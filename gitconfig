
[alias]
  cl = clone
  st = status
  ci = commit
  cia = commit -a
  co = checkout
  br = branch
  bra = branch -a
  df = diff
  sh = show
  re = reset
  me = merge
  cf = config
  sa = stash
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%Creset' --abbrev-commit
  lgp = log -p --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%Creset' --abbrev-commit

[gui]
  fontdiff = -family Courier -size 12 -weight normal -slant roman -underline 0 -overstrike 0

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto

[tig]
  show-rev-graph = yes
  line-graphics = no

[branch]
  autosetuprebase = always

[push]
  default = simple

